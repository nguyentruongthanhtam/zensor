extends layout
block ref
	link(rel='stylesheet', href='/stylesheets/style.css')
	script(src='/javascripts/dashboard.js',type="text/javascript")
	script(src='https://code.highcharts.com/4.2.2/highcharts-more.js',type="text/javascript")

block content
	div.container
		div.row
			div.col-sm-12.col-md-12.col-lg-12
				button.btn-default.btn(type="button",name="state",value="1",onclick='discover();') discover
				button.btn-default.btn(type="button",name="state",value="2",onclick='return connect();') connect
		div.icon
			//- img#connected(src="connected1small.png")
			div.circle2.blackC
				div.circleInner
				//- img.disconnected(src="disconnected1small.png")
				span.disconnected Discovering...
			span#type
			div.click Connect to device
		
		div.row
			div.col-sm-12.col-md-6.col-lg-6.containerCircle
				span Temperature
				.circle.redC
				.circlePanel#temperature
			div.col-sm-12.col-md-6.col-lg-6
				div#graphTemp(style="min-width: 310px; height: 400px; margin: 0 auto;margin-top:50px;")
		
		div.row
			div.col-sm-12.col-md-6.col-lg-6.containerCircle
				span Humidity
				.circle.blueC
				.circlePanel#humidity
			div.col-sm-12.col-md-6.col-lg-6
				div#graphHumi(style="min-width: 310px; height: 400px; margin: 0 auto;margin-top:50px;")
		
		div.row
			div.col-sm-12.col-md-6.col-lg-6.containerCircle
				span Luxometer
				.circle.yellowC
				.circlePanel#luxometer
			div.col-sm-12.col-md-6.col-lg-6
				div#graphLux(style="min-width: 310px; height: 400px; margin: 0 auto; margin-top:50px;")
		div.row
			
			div.col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-12(style="margin-top:50px;")
				div.panel.panel-default
					div.panel-heading 
						h3.panel-title Show Records
					div.panel-body
						form(action="/report",method="post",role='form')
							select.form-group.form-control#dateChoice(name="dateForm")
								each item, l in datelist
									option(value=item.name)= item.name
							select.form-group.form-control#typeChoice(name="typeForm")
								option(value='temp') Temperature 
								option(value='humi') Humidity
								option(value='lux') Light Level
							div.form-horizontal
								div.form-group
									label.control-label.col-md-3.col-lg-3 From
									div.col-md-9.col-lg-9
										input.form-control(name="hourF")
								div.form-group
									label.control-label.col-md-3.col-lg-3 To
									div.col-md-9.col-lg-9
										input.form-control(name="hourT")
								
							div.form-group
								button.btn.btn-default(type="submit",name="submitHour",value="submit") Show
		